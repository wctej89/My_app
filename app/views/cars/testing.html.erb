<h1>Welcome to Eficio</h1>

<h2>Make your selections</h2>

<div class="searchcontainer">
    <%= form_for @car, :url =>{:action => "search_results"} do |f| %>

      <div id="accordion">
        <h3>Price</h3>
        <div>
          <label for="car_price"><b>Maximum Price</b></label> <br>
          <label for="car_price" id= "car_price_value" style="border: 0; color: #f6931f; font-weight: bold; font-size: 3em; text-align: right;" ></label> <br>
          <input type="hidden" id="car_price" value="" name="car[price]">
          <div id="sliderprice"></div> <br>
        </div>
      
        <h3>MPG</h3>
        <div>
          <label for="car_mpg"><b>Lowest Desired MPG</b></label> <br>
          <label for="car_mpg" id= "car_mpg_value" style="border: 0; color: #f6931f; font-weight: bold; font-size: 3em; text-align: right;" ></label> <br>
          <input type="hidden" id="car_mpg" value="" name="car[mpg]">
          <div id="slidermpg"></div> <br>
        </div>

        <h3>Handling</h3>
        <div>
          <label for="car_handling"><b>Handling</b></label> <br>
          <label for="car_handling" id= "car_handling_value" style="border: 0; color: #f6931f; font-weight: bold; font-size: 3em; text-align: right;" ></label> <br>
          <input type="hidden" id="car_handling" value="" name="car[handling]">
          <div id="sliderhandling"></div> <br>
        </div>

        <h3>Interior</h3>
        <div>
          <label for="car_interior"><b>Interior</b></label> <br>
          <label for="car_interior" id= "car_interior_value" style="border: 0; color: #f6931f; font-weight: bold; font-size: 3em; text-align: right;" ></label> <br>
          <input type="hidden" id="car_interior" value="" name="car[interior]">
          <div id="sliderinterior"></div> <br>
        </div>

        <h3>Looks</h3>
        <div>
          <label for="car_looks"><b>Looks</b></label> <br>
          <label for="car_looks" id= "car_looks_value" style="border: 0; color: #f6931f; font-weight: bold; font-size: 3em; text-align: right;" ></label> <br>
          <input type="hidden" id="car_looks" value="" name="car[looks]">
          <div id="sliderlooks"></div> <br>
        </div>
      </div> <br>


      <%= f.submit "Find My Car", class: "btn btn-large btn-primary" %>
    <% end %>

    
  </div>
