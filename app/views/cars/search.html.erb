<body style="background-color: white">
  <div id="container">
    <%= form_for @car, :url =>{:action => "search_results"} do |f| %>

    <div class="searchcontainer">
      <div style="padding: 20px;"
          <p id="containerheader">Quick Start</p> <br> <br>
          
          <p id="sliderlabel">Price</p>
          <label for="car_price" id= "car_price_value" style="border: 0; color: white; font-size: 35px; float: right;" ></label> <br> <br>
          <input type="hidden" id="car_price" value="" name="car[price]">
          <div id="sliderprice" style="height: 10px; width: 400px; float: right;"></div> <br>

          <p id="sliderlabel">MPG</p>
          <label for="car_mpg" id= "car_mpg_value" style="border: 0; color: white; font-size: 35px; float: right;" ></label> <br><br>
          <input type="hidden" id="car_mpg" value="" name="car[mpg]">
          <div id="slidermpg" style="height: 10px; width: 400px; float: right;"></div> <br>
        
      </div>
    </div>

    <div class="welcomecontainer">      
      <p id="lakers" style="font-size: 81px; margin-left: 72px; color: white; font-family:'Arial'; margin-top: 263px;">E-ficio</p>
    </div>

    <div class="resultscontainer">
      <p id="containerheader" style="margin-left: 18px;">Results</p>
      <div id="ajaxinfo">
      </div>
    </div>

    <div class="finetunecontainer">
          
          <p id="containerheader" style="margin-left: 20px;">Fine Tune</p>
          
          <div id="accordion" style="width: 270px; margin-left: 15px;">    
            <h3>Handling</h3>
            <div>
              <label for="car_handling" id= "car_handling_value" style="border: 0; color: #f6931f; font-weight: bold; font-size: 3em; text-align: right;" ></label> <br>
              <input type="hidden" id="car_handling" value="" name="car[handling]">
              <div id="sliderhandling"></div> <br>
            </div>

            <h3>Interior</h3>
            <div>
              <label for="car_interior" id= "car_interior_value" style="border: 0; color: #f6931f; font-weight: bold; font-size: 3em; text-align: right;" ></label> <br>
              <input type="hidden" id="car_interior" value="" name="car[interior]">
              <div id="sliderinterior"></div> <br>
            </div>

            <h3>Looks</h3>
            <div>
              <label for="car_looks" id= "car_looks_value" style="border: 0; color: #f6931f; font-weight: bold; font-size: 3em; text-align: right;" ></label> <br>
              <input type="hidden" id="car_looks" value="" name="car[looks]">
            <div id="sliderlooks"></div> <br>
            </div>
            </div> <br>
    </div>

    <div class="carinfocontainer">
      <p id="containerheader" style="margin-left: 20px;">Car info</p>
      <iframe src="cars/6" style= "margin-left: 10px;" width="590" height="290" frameborder="0" name= "showinfo"></iframe>
    </div>

      <%= f.submit "Find My Car", id: "ninja" %>
    <% end %> 

  </div>

