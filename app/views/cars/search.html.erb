<h1>Welcome to Eficio</h1>

<h2>Make your selections on a scale of 1 to 10</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @car, :url =>{:action => "search_results"} do |f| %>

      <%= f.label :price %>
      <%= f.text_field :price %>

      <%= f.label :mpg %>
      <%= f.text_field :mpg %>

      <%= f.label :handling %>
      <%= f.text_field :handling %>

      <%= f.label :interior %>
      <%= f.text_field :interior %>

      <%= f.label :looks %>
      <%= f.text_field :looks %>

      <%= f.label :legroom %>
      <%= f.text_field :legroom %>

      <%= f.submit "Find My Car", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>