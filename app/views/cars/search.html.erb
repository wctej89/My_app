<!doctype html>
 
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>jQuery UI Slider - Snap to increments</title>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.9.1/themes/base/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.8.2.js"></script>
    <script src="http://code.jquery.com/ui/1.9.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="/resources/demos/style.css" />
    <script>
    $(function() {
        $( "#sliderprice" ).slider({
            value:20000,
            min: 10000,
            max: 200000,
            step: 5000,
            slide: function( event, ui ) {
                $( "#car_price" ).val( ui.value );
            }
        });

        $( "#slidermpg" ).slider({
            value:25,
            min: 0,
            max: 60,
            step: 1,
            slide: function( event, ui ) {
                $( "#car_mpg" ).val( ui.value );
            }
        });

        $( "#slider" ).slider({
            value:5,
            min: 0,
            max: 10,
            step: 1,
            slide: function( event, ui ) {
                $( "#car_handling" ).val( ui.value );
            }
        });

        $( "#sliderinterior" ).slider({
            value:5,
            min: 0,
            max: 10,
            step: 1,
            slide: function( event, ui ) {
                $( "#car_interior" ).val( ui.value );
            }
        });

        $( "#sliderlooks" ).slider({
            value:5,
            min: 0,
            max: 10,
            step: 1,
            slide: function( event, ui ) {
                $( "#car_looks" ).val( ui.value );
            }
        });

        $( "#car_price" ).val( $( "#sliderprice" ).slider( "value" ) );
        $( "#car_mpg" ).val( $( "#slidermpg" ).slider( "value" ) );
        $( "#car_handling" ).val( $( "#slider" ).slider( "value" ) );
        $( "#car_interior" ).val( $( "#sliderinterior" ).slider( "value" ) );
        $( "#car_looks" ).val( $( "#sliderlooks" ).slider( "value" ) );
        $( "#car_legroom" ).val( $( "#sliderlegroom" ).slider( "value" ) );
        
    });
    </script>
</head>

<h1>Welcome to Eficio</h1>

<h2>Make your selections</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @car, :url =>{:action => "search_results"} do |f| %>

      
      <!-- <%= f.label "Maximum Price" %>
      <%= f.text_field :price %>

      <%= f.label "Combined MPG" %>
      <%= f.text_field :mpg %> -->

      <label for="car_price"><b>Maximum Price</b></label>
      <input id="car_price" name="car[price]" style="border: 0; color: #f6931f; font-weight: bold;" />
      <div id="sliderprice"></div> <br>

      <label for="car_mpg"><b>Lowest Desired MPG</b></label>
      <input id="car_mpg" name="car[mpg]" style="border: 0; color: #f6931f; font-weight: bold;" />
      <div id="slidermpg"></div> <br>

      <label for="car_handling"><b>Handling</b></label>
      <input id="car_handling" name="car[handling]" style="border: 0; color: #f6931f; font-weight: bold;" />
      <div id="slider"></div> <br>

      <label for="car_interior"><b>Interior</b></label>
      <input id="car_interior" name="car[interior]" style="border: 0; color: #f6931f; font-weight: bold;" />
      <div id="sliderinterior"></div> <br>

      <label for="car_looks"><b>Looks</b></label>
      <input id="car_looks" name="car[looks]" style="border: 0; color: #f6931f; font-weight: bold;" />
      <div id="sliderlooks"></div> <br>

      <!-- <label for="car_legroom">Legroom</label>
      <input id="car_legroom" name="car[legroom]" style="border: 0; color: #f6931f; font-weight: bold;" />
      <div id="slider"></div> -->


      <!-- <%= f.label :interior %>
      <%= f.text_field :interior, :placeholder => "Scale of 1 to 10" %>

      <%= f.label :looks %>
      <%= f.text_field :looks, :placeholder => "Scale of 1 to 10" %>

      <%= f.label :legroom %>
      <%= f.text_field :legroom, :placeholder => "inches" %> -->

      <%= f.submit "Find My Car", class: "btn btn-large btn-primary" %>
    <% end %>

    
  </div>
</div>

