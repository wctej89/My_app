<h1>Welcome to Eficio</h1>

<h2>Make your selections (handling, interior, looks on a scale of 1 to 10)</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @car, :url =>{:action => "search_results"} do |f| %>

      
      <%= f.label "Maximum Price" %>
      <%= f.text_field :price %>

      <%= f.label "Combined MPG" %>
      <%= f.text_field :mpg %>

      <%= f.label :handling %>
      

      <%= f.radio_button :handling, 1 %> 1
      <%= f.radio_button :handling, 2 %> 2
      <%= f.radio_button :handling, 3 %> 3
      <%= f.radio_button :handling, 4 %> 4
      <%= f.radio_button :handling, 5 %> 5

      <%= f.label :interior %>
      <%= f.text_field :interior %>

      <%= f.label :looks %>
      <%= f.text_field :looks %>

      <%= f.label "Legroom (inches)" %>
      <%= f.text_field :legroom %>

      <%= f.submit "Find My Car", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>